<% users.forEach((user,index)=>{  %>

<tr>
    <td><%= index+1 %></td>
    <td><%=user.name %></td>
    <td><%=user.email %></td>
    <td><%=user.gender %></td>
    <td><%=user.status %></td>
    <td>
        <a href="/update-user?id=<%=user._id%>" class="btn border-shadow update">  <!--update-user ke saath ?id=<id> as params jaayega to taaki is id ko req.query.id se pakad ke axios request kar sake for one user-->
            <span class="text-gradient"> <i class="fas fa-pencil-alt"></i> </span>
        </a>

        <a  class="btn border-shadow delete"  data-id="<%=user._id%>">   
            <span class="text-gradient"><i class="fas fa-times"> </i> </span>
        </a>

    </td>
 </tr>


 <% }) %>